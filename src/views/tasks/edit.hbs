<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/tasks/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{task.title}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="task" class="form-control" placeholder="task" value="{{task.task}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Description">{{task.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>